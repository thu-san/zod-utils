{
  "name": "@zod-utils/react-hook-form",
  "version": "6.2.0",
  "description": "React Hook Form integration and utilities for Zod schemas",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/__tests__",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint:typescript": "tsc --project tsconfig.json",
    "lint": "biome check . && npm run lint:typescript",
    "lint:fix": "biome check --write .",
    "test": "npm run lint:typescript && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench --run",
    "bench:watch": "vitest bench",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "zod",
    "react-hook-form",
    "form",
    "validation",
    "react",
    "typescript"
  ],
  "author": "thu-san",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thu-san/zod-utils.git",
    "directory": "packages/react-hook-form"
  },
  "bugs": {
    "url": "https://github.com/thu-san/zod-utils/issues"
  },
  "homepage": "https://github.com/thu-san/zod-utils/tree/main/packages/react-hook-form#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.0.0",
    "zod": "^4.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@zod-utils/core": "*"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^4.0.8",
    "jsdom": "^25.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "tsup": "^8.3.5",
    "typescript": "^5",
    "vitest": "^4.0.8",
    "zod": "^4.1.12"
  }
}
