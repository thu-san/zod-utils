{
  "name": "zod-form-utils-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "npm run dev --workspace=apps/demo",
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace=packages/core",
    "build:rhf": "npm run build --workspace=packages/react-hook-form",
    "build:demo": "npm run build --workspace=apps/demo",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "size": "size-limit",
    "prepare": "husky",
    "publish:core": "npm publish --workspace=packages/core",
    "publish:rhf": "npm publish --workspace=packages/react-hook-form",
    "publish:all": "npm run build && npm publish --workspaces"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@size-limit/preset-small-lib": "^11.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "size-limit": "^11.2.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "size-limit": [
    {
      "name": "@zod-utils/core",
      "path": "packages/core/dist/index.js",
      "limit": "60 KB"
    },
    {
      "name": "@zod-utils/react-hook-form",
      "path": "packages/react-hook-form/dist/index.js",
      "limit": "70 KB"
    }
  ]
}
