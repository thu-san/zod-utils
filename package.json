{
  "name": "zod-form-utils-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/demo",
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace=packages/core",
    "build:rhf": "npm run build --workspace=packages/react-hook-form",
    "build:demo": "npm run build --workspace=apps/demo",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "bench": "npm run bench --workspaces --if-present",
    "bench:core": "npm run bench --workspace=packages/core",
    "bench:rhf": "npm run bench --workspace=packages/react-hook-form",
    "lint:typescript": "tsc --build --force",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint": "biome check . && npm run lint:eslint && npm run lint:typescript",
    "lint:fix": "biome check --write .",
    "size": "size-limit",
    "pre-pr": "npm run build && npm run lint && npm run test && npm run test:coverage && npm run bench && npm run size",
    "prepare": "husky",
    "publish:core": "npm publish --workspace=packages/core",
    "publish:rhf": "npm publish --workspace=packages/react-hook-form",
    "publish:all": "npm run build && npm publish --workspaces"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@changesets/cli": "^2.29.7",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "size-limit": "^11.2.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "size-limit": [
    {
      "name": "@zod-utils/core",
      "path": "packages/core/dist/index.mjs",
      "limit": "10 KB",
      "ignore": [
        "zod"
      ]
    },
    {
      "name": "@zod-utils/react-hook-form",
      "path": "packages/react-hook-form/dist/index.mjs",
      "limit": "10 KB",
      "ignore": [
        "zod",
        "react",
        "react-hook-form",
        "@hookform/resolvers",
        "@zod-utils/core"
      ]
    }
  ]
}
